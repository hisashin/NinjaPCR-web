extends ../layout

block append metas
  - var dir = 'maker'
  - var subdir = 'plate'
  +meta(metas, $i18n[dir].label, $i18n[dir][subdir].items[0].title)

block navbar
  +navbar('/maker/plate/')

block sidebar
  +sidebar('/maker/plate/')

block main

  +itemhead(dir, subdir)

  if $localeName != 'ja'
    +itemtitle(dir, subdir, 0)

    p
      | #{$i18n[dir][subdir].items[0].text1}
  else
    +itemtitle(dir, subdir, 0)

    p
      | #{$i18n[dir][subdir].items[0].text1}
      +table($i18n[dir][subdir].items[0].table)

  +nextstep('/maker/pc/index.html', $i18n.maker.pc.label)
